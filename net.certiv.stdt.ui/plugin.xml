   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="net.certiv.stdt.ui.toolbars.dslToolbar">
            <command
                  commandId="net.certiv.stdt.ui.edit.text.toggleMarkOccurrences"
                  icon="icons/etool16/mark_occurrences.gif"
                  style="toggle"
                  tooltip="Toggle Mark Occcurrences">
	            <visibleWhen
    	              checkEnabled="false">
        	       <reference
            	         definitionId="net.certiv.stdt.activeContexts.definition">
	               </reference>
    	        </visibleWhen>
            </command>
            <command
                  commandId="net.certiv.stdt.ui.build"
                  icon="icons/etool16/build_exec.gif"
                  style="push"
                  tooltip="Build StringTemplates">
	            <visibleWhen
    	              checkEnabled="false">
        	       <reference
            	         definitionId="net.certiv.stdt.activeContexts.definition">
	               </reference>
    	        </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.workbench.texteditor.hyperlinkDetectors">
      <hyperlinkDetector
            class="net.certiv.stdt.ui.editor.STHyperlinkDetector"
            id="net.certiv.stdt.ui.editor.STHyperlinkDetector"
            name="StringTemplateHyperlinkDetector"
            targetId="net.certiv.dsl.ui.codeUnit">
      </hyperlinkDetector>
   </extension>
   
   
</plugin>
