<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="net.certiv.stdt.ui.editor.STDocumentSetupParticipant"
         name="ST Document"
         point="org.eclipse.core.filebuffers.documentSetup">
      <participant
            class="net.certiv.stdt.ui.editor.STDocumentSetupParticipant"
            contentTypeId="net.certiv.stdt.core.contentType"
            extensions="st, stg">
      </participant>
   </extension>
   <extension
         id="nature"
         name="StringTemplate Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="net.certiv.stdt.core.STNature">
         </run>
      </runtime>
   </extension>
   
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            class="net.certiv.dsl.ui.DslElementAdapterFactory"
            adaptableType="net.certiv.dsl.core.model.IDslElement">
         <adapter
               type="org.eclipse.core.resources.IResource">
         </adapter>
         <adapter
               type="org.eclipse.core.resources.IProject">
         </adapter>
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
         <adapter type="org.eclipse.ui.progress.IDeferredWorkbenchAdapter"/>
         <adapter type="org.eclipse.ui.IActionFilter"/>
         <adapter type="org.eclipse.core.resources.IWorkspaceRoot"/>
      </factory>
   </extension>
   <extension point="org.eclipse.core.expressions.definitions">
		<definition id="net.certiv.stdt.activeContexts.definition">
			<with variable="activePartId">
				<equals value="net.certiv.stdt.ui.STEditor"/>
			</with>
		</definition>
	</extension>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="ST Editor"
            default="true"
            extensions="st, stg"
            icon="icons/obj16/stg.png"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="net.certiv.stdt.ui.editor.STEditor"
            id="net.certiv.stdt.ui.STEditor">
         <contentTypeBinding
               contentTypeId="net.certiv.stdt.core.contentType">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerSeverity="2"
            markerType="net.certiv.stdt.core.problem"
            name="net.certiv.stdt.ui.error"
            super="org.eclipse.ui.workbench.texteditor.error">
      </type>
      <type
            markerSeverity="1"
            markerType="net.certiv.stdt.core.problem"
            name="net.certiv.stdt.ui.warning"
            super="org.eclipse.ui.workbench.texteditor.warning">
      </type>
      <type
            markerSeverity="0"
            markerType="net.certiv.stdt.core.problem"
            name="net.certiv.stdt.ui.info"
            super="org.eclipse.ui.workbench.texteditor.info">
      </type>
      <type
            name="net.certiv.stdt.ui.occurrences">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            canFinishEarly="false"
            category="net.certiv.certivtools.wizards"
            class="net.certiv.stdt.ui.wizards.STNewWizard"
            icon="icons/obj16/stg.png"
            id="net.certiv.stdt.ui.wizards.STNewWizard"
            name="New ST group file">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="net.certiv.certivtools.prefs.TopLevelPage"
            class="net.certiv.stdt.ui.preferences.page.GeneralPage"
            id="net.certiv.stdt.ui.preferences.page.PrefPageGeneral"
            name="StringTemplate">
      </page>
      <page
            category="net.certiv.stdt.ui.preferences.page.PrefPageGeneral"
            class="net.certiv.stdt.ui.preferences.page.EditorPage"
            id="net.certiv.stdt.preferences.page.PrefPageEditor"
            name="Editor">
      </page>
      <page
            category="net.certiv.stdt.ui.preferences.page.PrefPageGeneral"
            class="net.certiv.stdt.ui.preferences.page.FoldingPage"
            id="net.certiv.stdt.ui.preferences.page.PrefPageFolding"
            name="Folding">
      </page>
      <page
            category="net.certiv.stdt.ui.preferences.page.PrefPageGeneral"
            class="net.certiv.stdt.ui.preferences.page.SyntaxColorPage"
            id="net.certiv.stdt.ui.preferences.page.PrefPageSyntaxColoring"
            name="Syntax Coloring">
      </page>
      <page
            category="net.certiv.stdt.ui.preferences.page.PrefPageGeneral"
            class="net.certiv.stdt.ui.preferences.page.TemplatesPage"
            id="net.certiv.stdt.ui.preferences.page.PrefPageCodeTemplates"
            name="Templates">
      </page>
      <page
            category="net.certiv.stdt.ui.preferences.page.PrefPageGeneral"
            class="net.certiv.stdt.ui.preferences.page.FormatterPage"
            id="net.certiv.stdt.ui.preferences.page.PrefPageFormatter"
            name="Formatter">
      </page>
   </extension>

   <extension
         point="org.eclipse.ui.contexts">
      <context
            description="STEditor Context"
            id="net.certiv.stdt.ui.stEditorScope"
            name="STEditor Content"
            parentId="org.eclipse.ui.textEditorScope">
      </context>
   </extension>
   
      <extension
         point="org.eclipse.ui.commands">
      <category
            name="STDsl Source"
            description="STDsl Source Actions"
            id="net.certiv.stdt.ui.category.source">
      </category>
      <command
            name="Format"
            description="Format Source"
            categoryId="net.certiv.stdt.ui.category.source"
            id="net.certiv.stdt.ui.edit.text.format">
      </command>
      <command
            name="Comment/Uncomment"
            description="Comment/Uncomment the selected lines"
            categoryId="net.certiv.stdt.ui.category.source"
            id="net.certiv.stdt.ui.edit.text.toggle.comment">
      </command>
      <command
            categoryId="net.certiv.stdt.ui.category.source"
            description="Toggles mark occurrences in Dsl editors"
            id="net.certiv.stdt.ui.edit.text.toggleMarkOccurrences"
            name="Mark Occurrences">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:false"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
      <command
            categoryId="net.certiv.stdt.ui.category.source"
            description="Manual build of Dsl files in project"
            id="net.certiv.stdt.ui.build"
            name="Manual Build">
      </command>
      <command
            categoryId="org.eclipse.ui.category.navigate"
            description="%ActionDefinition.openEditor.description"
            id="net.certiv.dsl.ui.edit.text.open.editor"
            name="%ActionDefinition.openEditor.name">
      </command>
   </extension>

