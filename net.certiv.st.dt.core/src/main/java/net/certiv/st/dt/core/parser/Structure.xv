xvisitor grammar Structure ;

options {
	parserClass = STGParser ;
	superClass  = StructureBuilder ;
}

@header {
	package net.certiv.st.dt.core.parser.gen;
	import net.certiv.st.dt.core.parser.StructureBuilder;
}

structure
	: group
	| delims
	| imports
	| template
	| dict
	;

group
	: /group
		{ onEntry:	createGroup();	}
		{ onExit:	blockEnd(); }
	;

delims
	: /group/delimiters
		{ createDelimStatement();	}
	;

imports
	: /group//importSpec
		{ createImportStatement();	}
	;

template
	: //template
		{ createTemplateStatement();	}
	;

dict
	: //dict
		{ createDictStatement();	}
	;

