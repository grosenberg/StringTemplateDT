   <extension
         point="net.certiv.dsl.core.modelBuilderFactory">
      <modelBuilderFactory
            class="net.certiv.stdt.core.parser.STSourceParserFactory"
            description="ST Model Builder Factory"
            name="ST Model Builder Factory"
            natureId="net.certiv.stdt.core.nature"
            priority="0">
      </modelBuilderFactory>
   </extension>
   -->

</plugin>
